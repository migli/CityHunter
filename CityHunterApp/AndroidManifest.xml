<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lu.uni.cityhunter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="lu.uni.cityhunter.activities.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lu.uni.cityhunter.activities.AllCitiesActivity"
            android:label="@string/title_activity_all_cities" >
        </activity>
        <activity
            android:name="lu.uni.cityhunter.activities.CityActivity"
            android:label="@string/title_activity_city" >
        </activity>
    </application>

</manifest>
