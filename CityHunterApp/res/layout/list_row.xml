<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:background="@layout/border" >

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/listChallengePicture"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:scaleType="fitXY"
            android:src="@drawable/abc_ab_bottom_solid_light_holo"/>

    </LinearLayout>

    <TextView
        android:id="@+id/listChallengeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Title"
        android:textColor="#45AEFF"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_marginLeft="5dip" />

    <TextView
        android:id="@+id/listChallengeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Description"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/listChallengeTitle"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="5dip"
        android:paddingRight="20dp"
        android:textColor="#848482" />
    
    <ImageView
        android:id="@+id/listRightArrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/greater_than" />
    
</RelativeLayout>
